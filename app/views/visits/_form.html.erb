<%= form_with(model: visit, local: true) do |form| %>
  <% if visit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(visit.errors.count, "error") %> prohibited this visit from being saved:</h2>

      <ul>
      <% visit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :visit_notes %>
    <%= form.text_area :visit_notes, id: :visit_visit_notes %>
  </div>

  <div class="field">
    <%= form.label :visit_date_start %>
    <%= form.date_select :visit_date_start, id: :visit_visit_date_start %>
  </div>

  <div class="field">
    <%= form.label :visit_date_end %>
    <%= form.date_select :visit_date_end, id: :visit_visit_date_end %>
  </div>

  <div class="field">
    <%= form.label :collection_id %>

    <% if params[:coll_id] %>
      <%= form.select(:collection_id, Collection.all.collect { |collection| [collection.collectionName, collection.id]}, include_blank: true, :selected => params[:coll_id]) %>
    <% else %>
      <%= form.select(:collection_id, Collection.all.collect { |collection| [collection.collectionName, collection.id]}, include_blank: true) %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
