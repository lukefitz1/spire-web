<p id="notice"><%= notice %></p>

<% content_for :title, "Search General Information" %>

<h1>General Informations</h1>

<h4>Search for General Information</h4>
<%= form_tag(general_information_search_path, method: :get) do %>
  <%= text_field_tag(:search) %>
  <%= submit_tag "Search" %>
<% end %>
<br /><br />

<table>
  <thead>
  <tr>
    <th>Information label</th>
    <th>Information</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @general_informations.each do |general_information| %>
    <tr>
      <td><%= general_information.information_label %></td>
      <td><%= general_information.information %></td>
      <td><%= link_to 'Show', general_information %></td>
      <td><%= link_to 'Edit', edit_general_information_path(general_information) %></td>
      <td><%= link_to 'Destroy', general_information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
