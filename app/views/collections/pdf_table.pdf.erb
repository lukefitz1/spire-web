<%= wicked_pdf_stylesheet_link_tag "bootstrap-sprockets" %>
<%= wicked_pdf_stylesheet_link_tag "bootstrap" %>
<%= wicked_pdf_stylesheet_link_tag "collections" %>
<%= wicked_pdf_stylesheet_link_tag "artists" %>
<%= wicked_pdf_stylesheet_link_tag "customers" %>
<%= wicked_pdf_stylesheet_link_tag "artworks" %>

<div class='art-table'>
	<% unless @artworks.blank? %>

    <!-- Artworks Table -->
    <table>
      <thead class='art-table-header'>
        <tr>
          <th>Object ID</th>
          <th>Art Type</th>
          <th>Title</th>
          <th>Artist</th>
          <th>Date</th>
          <th>Medium</th>
          <th>Image</th>
          <th>Dimensions</th>
          <th>Frame Dimensions</th>
          <th>Current Location</th>
          <th>Source</th>
          <th>Date Acquired</th>
          <th class='art-table-notes-header'>Notes</th>
          <th>Amount Paid</th>
          <th>Current Value</th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @artworks.each do |artwork| %>
          <tr>
            <td class='art-table-data'><%= artwork.ojbId %></td>
            <td class='art-table-data'><%= artwork.artType %></td>
            <td class='art-table-data'><%= artwork.title %></td>

            <td class='art-table-data'>
              <% unless artwork.artists.empty? %>
                <%= artwork.artists[0].firstName %><%= ' ' %><%= artwork.artists[0].lastName %>
              <% end %> 
            </td>

            <td class='art-table-data'><%= artwork.date %></td>
            <td class='art-table-data'><%= artwork.medium %></td>

            <td class='art-table-data'>
              <% if artwork.image.thumb.url %>
                <%= image_tag artwork.image.thumb.url %>
              <% end %>
            </td>

            <td class='art-table-data'><%= artwork.dimensions %></td>
            <td class='art-table-data'><%= artwork.frame_dimensions %></td>
            <td class='art-table-data'><%= artwork.currentLocation %></td>
            <td class='art-table-data'><%= artwork.source %></td>
            <td class='art-table-data'><%= artwork.dateAcquired %></td>
            <td class='art-table-data art-table-notes'><%= artwork.notes %></td>
            <td class='art-table-data'><%= artwork.amountPaid %></td>
            <td class='art-table-data'><%= artwork.currentValue %></td>

            <td class='art-table-data'>
              <% if artwork.notesImage.thumb.url %>
                <%= image_tag artwork.notesImage.thumb.url %>
              <% end %>
            </td>

            <td class='art-table-data'>
              <% if artwork.additionalInfoImage.thumb.url %>
                <%= image_tag artwork.additionalInfoImage.thumb.url %>
              <% end %>
            </td>

            <td class='art-table-data'>
              <% if artwork.notesImageTwo.thumb.url %>
                <%= image_tag artwork.notesImageTwo.thumb.url %>
              <% end %>
            </td>

            <td class='art-table-data'>
              <% if artwork.additionalInfoImageTwo.thumb.url %>
                <%= image_tag artwork.additionalInfoImageTwo.thumb.url %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

</div>