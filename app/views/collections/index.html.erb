<p id="notice"><%= notice %></p>

<h1>Collections</h1>

<%= link_to 'New Collection', new_collection_path %><br /><br />

<table>
  <thead>
    <tr>
      <th>Collection Name</th>
      <th>Identifier</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.collectionName %></td>
        <td><%= collection.identifier %></td>

        <td>
          <% unless collection.customer.blank? %>
            <%= collection.customer.firstName %><%= ' ' %><%= collection.customer.lastName %>
          <% end %>     
        </td>

        <td><%= link_to 'Show', collection %></td>
        <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
        <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
