<%= form_with(model: medium, local: true) do |form| %>
  <% if medium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(medium.errors.count, "error") %> prohibited this medium from being saved:</h2>

      <ul>
      <% medium.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :media_name %>
    <%= form.file_field :media_name, id: :medium_media_name %>

    <% if form.object.media_name? %>
      <%= image_tag form.object.media_name.thumb.url %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :customer_id %>
    <%= form.select(:customer_id, Customer.all.collect { |customer| [customer.firstName + ' ' + customer.lastName, customer.id]}, include_blank: true, :selected => params[:customer_id]) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
