<p id="notice"><%= notice %></p>

<p>
  <strong>ID:</strong>
  <%= @customer.id %>
</p>

<p>
  <strong>Firstname:</strong>
  <%= @customer.firstName %>
</p>

<p>
  <strong>Lastname:</strong>
  <%= @customer.lastName %>
</p>

<% @customer.collections.each do |collection| %>
  <table>
    <thead>
      <tr>
        <th>Collection ID</th>
        <th>Collectionname</th>
        <th>Customer</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= collection.id %></td>
        <td><%= collection.collectionName %></td>
        
        <td>
          <% unless collection.customer.blank? %>
            <%= collection.customer.firstName %><%= ' ' %><%= collection.customer.lastName %>
          <% end %>     
        </td>

      </tr>
    </tbody>
  </table>

  <!-- Artworks Table -->
  <% unless collection.artworks.blank? %>
    <!-- <a class="show-artwork">Show Artwork</a>
    <a class="hide-artwork">Hide Artwork</a> -->
    
    <div class="artwork-table">
      <table>
        <thead>
          <tr>
            <th>Object ID</th>
            <th>Art Type</th>
            <th>Title</th>
            <th>Date</th>
            <th>Medium</th>
            <th>Image</th>
            <th>Description</th>
            <th>Dimensions</th>
            <th>Frame Dimensions</th>
            <th>Condition</th>
            <th>Current Location</th>
            <th>Source</th>
            <th>Date Acquired Label</th>
            <th>Date Acquired</th>
            <th>Amount Paid</th>
            <th>Current Value</th>
            <th>Notes</th>
            <th>Notes Image</th>
            <th>Additional Info Label</th>
            <th>Additional Info Text</th>
            <th>Additional Info Image</th>
            <th>Additional PDF</th>
            <th>Reviewed By</th>
            <th>Reviewed Date</th>
            <th>Provenance</th>
            <th>Artists</th>
            <th>Customers</th>
            <th>Collection</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% collection.artworks.each do |artwork| %>
            <tr>
              <td><%= artwork.ojbId %></td>
              <td><%= artwork.artType %></td>
              <td><%= artwork.title %></td>
              <td><%= artwork.date %></td>
              <td><%= artwork.medium %></td>

              <td>
                <% if artwork.image.thumb.url %>
                  <%= image_tag artwork.image.thumb.url %>
                <% end %>
              </td>

              <td><%= artwork.description %></td>
              <td><%= artwork.dimensions %></td>
              <td><%= artwork.frame_dimensions %></td>
              <td><%= artwork.condition %></td>
              <td><%= artwork.currentLocation %></td>
              <td><%= artwork.source %></td>
              <td><%= artwork.dateAcquired %></td>
              <td><%= artwork.amountPaid %></td>
              <td><%= artwork.currentValue %></td>
              <td><%= artwork.notes %></td>
              <td>
                <% if artwork.notesImage.thumb.url %>
                  <%= image_tag artwork.notesImage.thumb.url %>
                <% end %>
              </td>

              <td><%= artwork.additionalInfoLabel %></td>
              <td><%= artwork.additionalInfoText %></td>
              
              <td>
                <% if artwork.additionalInfoImage.thumb.url %>
                  <%= image_tag artwork.additionalInfoImage.thumb.url %>
                <% end %>
              </td>

              <td><%= artwork.additionalPdf %></td>
              <td><%= artwork.reviewedBy %></td>
              <td><%= artwork.reviewedDate %></td>
              <td><%= artwork.provenance %></td>

              <td>
                <% unless artwork.artist.blank? %>
                  <%= artwork.artist.firstName %><%= ' ' %><%= artwork.artist.lastName %>
                <% end %> 
              </td>

              <td>
                <% unless artwork.customer.blank? %>
                  <%= artwork.customer.firstName %><%= ' ' %><%= artwork.customer.lastName %>
                <% end %>     
              </td>

              <td><%= link_to 'PDF', preview_pdf_path(format: :pdf) %></td>
            </tr>
          <% end %>
        
        </tbody>
      </table>
    </div>

    <h4>Import that data!</h4>
      <%= form_tag import_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= hidden_field_tag(:customer_id, @customer.id) %>
        <%= hidden_field_tag(:collection_id, collection.id) %>
        <%= submit_tag "Import Artwork" %>
    <% end %>

  <% end %>

<% end %>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
